{
  "version": "2025-10-20",
  "tools": [
    {
        "name": "is-google-tag",
        "description": "Optimize Google Tag (gtag.js) for async, non-blocking, and privacy-safe loading.",
        "input_schema": {
          "type": "object",
          "properties": {
            "html": { "type": "string", "description": "Raw HTML snippet containing Google Tag script(s)" },
            "options": {
              "type": "object",
              "properties": {
                "anonymizeIP": { "type": "boolean", "default": true },
                "transport": { "type": "string", "enum": ["beacon", "xhr", "image"], "default": "beacon" },
                "async": { "type": "boolean", "default": true },
                "idFallback": { "type": "string", "description": "Default GA tag ID if missing" }
              }
            }
          },
          "required": ["html"]
        },
        "rule": { "type": "builtin", "name": "optimizeGTag", "field": "html" }
      },
    {
      "name": "is-html-minify",
      "description": "Minify HTML safely while preserving <pre>, <textarea>, <script>, and <style> content.",
      "input_schema": {
        "type": "object",
        "properties": {
          "html": { "type": "string" }
        },
        "required": ["html"]
      },
      "rule": { "type": "builtin", "name": "minifyHTML", "field": "html" }
    },
    {
      "name": "is-minify-js",
      "description": "Minify JavaScript source with safe whitespace and punctuation collapse.",
      "input_schema": {
        "type": "object",
        "properties": {
          "code": { "type": "string" }
        },
        "required": ["code"]
      },
      "rule": { "type": "builtin", "name": "minifyJS", "field": "code" }
    },
    {
      "name": "is-minify-css",
      "description": "Minify CSS rules and declarations safely.",
      "input_schema": {
        "type": "object",
        "properties": {
          "code": { "type": "string" }
        },
        "required": ["code"]
      },
      "rule": { "type": "builtin", "name": "minifyCSS", "field": "code" }
    },
    {
      "name": "is-prompt-minify",
      "description": "Minify LLM prompts by removing redundancy and excess whitespace without changing meaning.",
      "input_schema": {
        "type": "object",
        "properties": {
          "text": { "type": "string" }
        },
        "required": ["text"]
      },
      "rule": { "type": "builtin", "name": "promptMinify", "field": "text" }
    },
    {
      "name": "is-strip-ansi",
      "description": "Remove ANSI escape sequences from a string.",
      "input_schema": {
        "type": "object",
        "properties": {
          "text": { "type": "string" }
        },
        "required": ["text"]
      },
      "rule": { "type": "builtin", "name": "stripAnsi", "field": "text" }
    }
  ]
}
